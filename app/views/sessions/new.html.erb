<div class="top-wrapper ">
  <div class="container top-container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 login-area">
        <h2>Login!</h2>
        <%= form_for :session, url: login_path do |f| %>
        <% if @user.errors.any? %>
          <%= render 'shered/error_messages' %>
        <% end %>
          <div class="form-group">
            <h5>メールアドレス</h5>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <h5>パスワード※半角英数字8文字以上</h5>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <%= f.submit "ログイン", class: 'btn btn-block btn-primary' %>
        <% end %>
        <div class="test-login">
          <%= form_for :session, url: login_path do |f|  %>
            <%= f.hidden_field :email, :value => "test@gmail.com" %>
            <%= f.hidden_field :password, :value => "test0000" %>
            <%= f.submit 'お試しログイン' , class: 'btn btn-block btn-danger'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>