<div class="post-new-wrapper">
  <div class="container post-new-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      　<h1 class="text-center">編集する</h1>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content ,value: @post.content ,class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>
          <%= f.submit '保存', class: 'btn btn-block btn-black' %>
        <% end %>
      </div>
    </div>
  </div>
</div>